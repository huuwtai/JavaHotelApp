<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="10dp">
        <LinearLayout
            android:id="@+id/twotext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/btn_r_update"
            android:orientation="vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/r_Avatar"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background"/>
                <TextView
                    android:id="@+id/tv_r_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ID: 1" />
                <TextView
                    android:id="@+id/tv_r_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên phòng: đơn" />
                <TextView
                    android:id="@+id/tv_r_rtname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loại phòng: đơn" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_r_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/btn_r_delete"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:drawableLeft="@drawable/ic_baseline_edit"
            android:text="Sửa">

        </Button>
        <Button
            android:id="@+id/btn_r_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:drawableLeft="@drawable/ic_baseline_delete"
            android:text="Xoá">

        </Button>

</RelativeLayout>